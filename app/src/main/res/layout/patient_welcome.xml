<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/welcomeMsg"
        android:id="@+id/lblBienvenido"
        android:layout_marginTop="39dp"
        android:textSize="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@mipmap/ic_ehh"
        android:layout_below="@+id/lblBienvenido"
        android:layout_alignRight="@+id/lblBienvenido"
        android:layout_alignEnd="@+id/lblBienvenido"
        android:layout_alignLeft="@+id/lblBienvenido"
        android:layout_alignStart="@+id/lblBienvenido"
        android:layout_above="@+id/radioGroup" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:id="@+id/radioGroup"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/user"
            android:id="@+id/rbPaciente"
            android:checked="false"
            android:layout_weight="1"
            android:onClick="onRadioButtonClicked"
            android:textSize="30dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/responsible"
            android:id="@+id/rbResponsable"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2"
            android:layout_marginBottom="119dp"
            android:checked="false"
            android:layout_weight="1"
            android:onClick="onRadioButtonClicked"
            android:textSize="30dp" />

    </RadioGroup>


</RelativeLayout>