
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"  tools:context="health.com.elderhealthhelper.responsible.MainActivity">

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:text="@string/locatePatient"
        android:id="@+id/localizePatientBtn"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:theme="@style/settingsButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="@string/call"
        android:id="@+id/responsibleCallBtn"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:theme="@style/settingsButton"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/localizePatientBtn"
        android:layout_alignEnd="@+id/localizePatientBtn"
        android:layout_alignLeft="@+id/localizePatientBtn"
        android:layout_alignStart="@+id/localizePatientBtn" />

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="@string/patientSettings"
        android:id="@+id/patientSettingsBtn"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:theme="@style/settingsButton"
        android:layout_below="@+id/responsibleCallBtn"
        android:layout_alignLeft="@+id/responsibleCallBtn"
        android:layout_alignStart="@+id/responsibleCallBtn"
        android:layout_marginTop="68dp"
        android:layout_alignRight="@+id/responsibleCallBtn"
        android:layout_alignEnd="@+id/responsibleCallBtn" />

</RelativeLayout>