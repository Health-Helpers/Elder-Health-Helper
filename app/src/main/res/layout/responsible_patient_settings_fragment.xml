
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="health.com.elderhealthhelper.responsible.MainActivity">

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:text="@string/patientSettingsAlert"
        android:id="@+id/patientAlertsBtn"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:theme="@style/settingsButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="@string/patientSettingsZone"
        android:id="@+id/secureZoneBtn"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:theme="@style/settingsButton"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/patientAlertsBtn"
        android:layout_alignEnd="@+id/patientAlertsBtn"
        android:layout_alignLeft="@+id/patientAlertsBtn"
        android:layout_alignStart="@+id/patientAlertsBtn" />

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="@string/patientSettingsName"
        android:id="@+id/patientSettingsNameBtn"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:theme="@style/settingsButton"
        android:layout_below="@+id/secureZoneBtn"
        android:layout_alignLeft="@+id/secureZoneBtn"
        android:layout_alignStart="@+id/secureZoneBtn"
        android:layout_marginTop="68dp"
        android:layout_alignRight="@+id/secureZoneBtn"
        android:layout_alignEnd="@+id/secureZoneBtn" />

</RelativeLayout>