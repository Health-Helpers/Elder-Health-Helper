<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hh.ehh.patient.PatientMainActivity">

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnBluetooth"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/pair"
        android:textColor="#ffffff"
        android:theme="@style/pairButton"
        android:layout_below="@+id/textClock"
        android:layout_alignRight="@+id/callBtn"
        android:layout_alignEnd="@+id/callBtn"
        android:layout_alignLeft="@+id/callBtn"
        android:layout_alignStart="@+id/callBtn"
        android:textSize="30dp" />


    <Button
        android:id="@+id/callBtn"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/call"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:theme="@style/callButton"
        android:textSize="80dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/settingsBtn"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/settings"
        android:textColor="#ffffff"
        android:theme="@style/settingsButton"
        android:textSize="30dp"
        android:layout_below="@+id/callBtn"
        android:layout_marginTop="45dp"
        android:layout_alignRight="@+id/callBtn"
        android:layout_alignEnd="@+id/callBtn"
        android:layout_alignLeft="@+id/callBtn"
        android:layout_alignStart="@+id/callBtn" />


</RelativeLayout>
